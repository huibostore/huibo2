<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/search_box"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:layout_gravity="top"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >

            <com.example.nwidc.huibo.View.AwsomeIconFont
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/goods_info_btn_bg"
                android:text="&#xe679;"
                android:textColor="#ffffff"
                android:textSize="26sp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

            <com.example.nwidc.huibo.View.AwsomeIconFont
                android:id="@+id/btn_mm"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/goods_info_btn_bg"
                android:text="&#xe7f7;"
                android:textColor="#ffffff"
                android:textSize="26sp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
            <TextView
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/btn_back"
                android:layout_toLeftOf="@+id/btn_mm"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:textColor="#696969"
                android:textSize="16sp"
                android:text="编辑" />
            <TextView
                android:id="@+id/btn_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/btn_back"
                android:layout_toLeftOf="@+id/btn_mm"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#696969"
                android:textSize="20sp"
                android:text="购物车(1)" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_box"
            android:layout_marginTop="10dp"
            android:background="#ffffff">
            <com.example.nwidc.huibo.View.AwsomeIconFont
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/goods_infos_btn_bg"
                android:text=""
                android:layout_marginLeft="12dp"
                android:textColor="#ff4965"
                android:textSize="20sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="10dp"
                android:text="XX美伞旗舰店"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goods_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop"
            android:background="#F8F8F8"
            android:orientation="horizontal">

            <com.example.nwidc.huibo.View.AwsomeIconFont
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/goods_infos_btn_bg"
                android:text=""
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"
                android:textColor="#ff4965"
                android:textSize="20sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/goods"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/goods_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="太阳伞防紫外线超轻防晒遮阳伞女士小黑胶"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/goods_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_title"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="颜色分类：三折小清新 米白色"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_category"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:textColor="#ff4965"
                    android:text="￥129"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/goods_prices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_category"
                    android:layout_toRightOf="@+id/goods_price"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:text="￥299"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/goods_category"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="28dp"
                    android:textColor="#696969"
                    android:textSize="18sp"
                    android:text="X1" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/love"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/goods_detail">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                >

                <com.example.nwidc.huibo.View.AwsomeIconFont
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"                         android:background="@drawable/goods_infos_btn_bg"
                    android:text="&#xe668;"
                    android:textColor="#ff4965"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />
            </LinearLayout>
        </RelativeLayout>
        <TableLayout
            android:id="@+id/product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/love"
            android:paddingTop="2dp"
            android:paddingBottom="16dp">

            <TableRow android:gravity="center">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="148dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_pay01"
                    />
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="148dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/order_pay02"
                    />
            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:id="@+id/detai2"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:paddingTop="10dp"
            android:paddingBottom="16dp"
            android:layout_below="@+id/product"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                >
                <!-- android:gravity="right"表示Button组件向右对齐 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="#696969"
                    android:textSize="16sp"
                    android:text="应付金额：" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textColor="#ff4965"
                    android:textSize="16sp"
                    android:text="￥129.00" />
                <Button
                    android:layout_width="120dp"
                    android:layout_height="46dp"
                    android:background="@drawable/buttons_red"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="12dp"
                    android:textSize="18sp"
                    android:text="提交订单" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
