<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f3f3f3">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:adjustViewBounds="true"
                android:src="@drawable/ginfo_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <com.example.nwidc.huibo.View.AwsomeIconFont
                    android:id="@+id/textView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/goods_info_btn_bg"
                    android:text="&#xe679;"
                    android:textColor="#ffffff"
                    android:textSize="26sp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />

                <com.example.nwidc.huibo.View.AwsomeIconFont
                    android:id="@+id/btn_menu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/goods_info_btn_bg"
                    android:text="&#xe7f7;"
                    android:textColor="#ffffff"
                    android:textSize="26sp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />

                <com.example.nwidc.huibo.View.AwsomeIconFont
                    android:id="@+id/btn_cart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/btn_menu"
                    android:background="@drawable/goods_info_btn_bg"
                    android:text="&#xe7d8;"
                    android:textColor="#ffffff"
                    android:textSize="26sp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />
            </RelativeLayout>
        </FrameLayout>



        <LinearLayout
            android:id="@+id/goods_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shop"
            android:background="#ffffff"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/goods"/>
            </RelativeLayout>
            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/goods_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="限时抢购 ￥129元"
                    android:textColor="#ff4965"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/goods_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/goods_title"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="库存81470件"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/goods_prices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/goods_category"

                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:text="选择 颜色分类"
                    android:textSize="16sp"

                    />

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="18dp"
                    android:textColor="#696969"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/goods_info_share"
                    android:text="">

                    <com.example.nwidc.huibo.View.AwsomeIconFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#xe646;"
                        android:textSize="26sp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#ddd"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">
                <TextView
                    android:id="@+id/txt_pingjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="颜色分类"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ffffff"
                android:shrinkColumns="0,1,2"
                android:stretchColumns="0,1,2">
                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView  android:gravity="center"
                        android:padding="14dp"
                        android:background="@drawable/goods_button"
                        android:layout_margin="2dp"
                        android:text="三折小清新 米白色" />
                    <TextView  android:gravity="center"
                        android:padding="14dp"
                        android:background="@drawable/goods_button"
                        android:layout_margin="2dp"
                        android:text="三折小清新 蓝色" />
                    <TextView  android:gravity="center"
                        android:background="@drawable/goods_button"
                        android:layout_margin="2dp"
                        android:padding="14dp"
                        android:text="三折小清新 粉色" />
                </TableRow>

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView  android:gravity="center"
                        android:padding="14dp"
                        android:background="@drawable/goods_button"
                        android:layout_margin="2dp"
                        android:text="自动船瞄 米白色" />
                    <TextView  android:gravity="center"
                        android:padding="14dp"
                        android:background="@drawable/goods_button"
                        android:layout_margin="2dp"
                        android:text="自动船瞄 蓝色" />
                    <TextView  android:gravity="center"
                        android:padding="14dp"
                        android:background="@drawable/goods_button"
                        android:layout_margin="2dp"
                        android:text="自动船瞄 粉色" />
                </TableRow>

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView  android:gravity="center"
                        android:padding="14dp"
                        android:background="@drawable/goods_button"
                        android:layout_margin="2dp"
                        android:text="三折印花 米白色" />
                    <TextView  android:gravity="center"
                        android:padding="14dp"
                        android:background="@drawable/goods_button"
                        android:layout_margin="2dp"
                        android:text="三折印花 蓝色" />
                    <TextView  android:gravity="center"
                        android:padding="14dp"
                        android:background="@drawable/goods_button"
                        android:layout_margin="2dp"
                        android:text="三折印花 粉色" />
                </TableRow>

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView  android:gravity="center"
                        android:padding="14dp"
                        android:background="@drawable/goods_button"
                        android:layout_margin="2dp"
                        android:text="自动百合花卉" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center"

            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="购买数量"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#888" />
                <EditText
                    android:inputType="number"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:text="ff"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:textColor="#888" >
                </EditText>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#ddd"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center"

            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/eton_placeholder"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/txt_kuaidis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/eton_placeholder"
                    android:background="@drawable/buttons_pink"
                    android:text="加入购物车"
                    android:layout_marginTop="12dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#fff" />
                <TextView
                    android:id="@+id/txt_kuaidiss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/eton_placeholder"
                    android:background="@drawable/buttons_red"
                    android:text="立即购买"
                    android:layout_marginTop="12dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#fff" />
            </RelativeLayout>
        </LinearLayout>

        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></WebView>
    </LinearLayout>


</ScrollView>