    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_aName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="title" />

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_below="@id/txt_aName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/s123"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_aSpeaks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"

                        android:textSize="12sp"
                        android:background="@drawable/redius_pink_5dp"
                        android:text="购买过的店铺"
                        android:textColor="#fff" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/txt_aSpeaksss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:textSize="12sp"
                        android:background="@drawable/redius_pink_5dp"
                        android:text="包邮"
                        android:textColor="#fff" />

                </LinearLayout>

                <TextView
                    android:id="@+id/goods_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:textSize="12sp"
                    android:text="新乡" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/s123s"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_aSpeak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="price"
                        android:textSize="18sp"
                        android:textColor="#ff4965" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/txt_aSpeakssss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已有xxx人付款" />

                </LinearLayout>

            </LinearLayout>




        </RelativeLayout>

