<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:paddingBottom="2dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.example.nwidc.huibo.View.AwsomeIconFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="&#xe731;"
                            android:textColor="#FF80A2"
                            android:textSize="22sp"
                            android:layout_marginTop="6dp"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FF80A2"
                            android:text="交谈"/>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                    <com.example.nwidc.huibo.View.AwsomeIconFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#xe7b8;"
                        android:textSize="22sp"

                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店铺"/>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/collect"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                    <com.example.nwidc.huibo.View.AwsomeIconFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#xe64c;"
                        android:id="@+id/star"
                        android:textColor="#646464"
                        android:layout_centerHorizontal="true"
                        android:textSize="22sp"
                        android:layout_marginTop="6dp"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />

                    <TextView
                        android:id="@+id/startext"
                        android:textColor="#646464"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"/>



            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:onClick="showPopFormBottom"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttons_pink">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加入购物车"
                        android:textColor="#fff" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/btn_cancel"


                android:layout_width="match_parent"
                android:background="@drawable/buttons_red"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="立即下单"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
