<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#f3f3f3"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="match_parent">


            <com.example.nwidc.huibo.View.AwsomeIconFont
                android:id="@+id/btn_back"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:textSize="20sp"
                android:text="&#xe679;"/>

            <EditText
                android:id="@+id/loginTitle"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入商品名"
                android:layout_toRightOf="@+id/btn_back"
                android:layout_toLeftOf="@+id/search"
                android:textSize="15sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/search"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#ff4965"
                android:text="搜索"
                android:textSize="15sp" />

        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_essence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabPadding="10dp"
                    app:tabGravity="fill"
                    app:tabMode="fixed"
                    android:background="@color/essence_tab_bg"
                    app:tabIndicatorColor="@color/essence_tab_text_color_press"
                    app:tabSelectedTextColor="@color/essence_tab_text_color_press"
                    app:tabTextColor="@color/essence_tab_text_color_normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="近期搜索"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清除"
                        android:textSize="16sp"/>

                </RelativeLayout>



                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_margin="4dp"
                        android:padding="4dp"
                        android:background="@drawable/rediu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="近期"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_margin="4dp"
                        android:background="@drawable/rediu"
                        android:padding="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="近期期"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_margin="4dp"
                        android:background="@drawable/rediu"
                        android:padding="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="近期期期"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_margin="4dp"
                        android:background="@drawable/rediu"
                        android:padding="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="近期期期期"
                        android:textSize="16sp"/>




                </LinearLayout>


            </LinearLayout>




        </LinearLayout>

    </LinearLayout>



</LinearLayout>